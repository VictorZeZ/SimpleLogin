@using Microsoft.AspNetCore.Identity
@using SimpleLogin.Models

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<div>
    @if (SignInManager.IsSignedIn(User))
    {
        <div class="flex items-center justify-center text-lg select-none">
            <p>Hello</p>
            <p class="text-green-600 ml-1">@UserManager.GetUserName(User)</p>
            <p>, you successfully logged in</p>
        </div>
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout"
            asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="py-2 px-8 rounded-lg bg-neutral-200 hover:bg-red-500 mt-8 shadow-xl">
                Logout
                <i class="bi bi-box-arrow-right"></i>
            </button>
        </form>
    }
    else
    {
        <a class="py-2 px-8 rounded-lg bg-neutral-200 hover:bg-neutral-300 mt-8 shadow-xl" id="register" asp-area="Identity"
            asp-page="/Account/Register">Register</a>
        <a class="py-2 px-8 rounded-lg bg-neutral-200 hover:bg-neutral-300 mt-4 shadow-xl" id="login" asp-area="Identity"
            asp-page="/Account/Login">Login</a>
    }
</div>
