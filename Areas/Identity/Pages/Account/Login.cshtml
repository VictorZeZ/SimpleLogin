@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<div class="flex w-full">
    <div class="w-1/2 flex h-dvh items-center justify-center p-1 left-to-right">
        <div
            class="bg-[url('../images/black-and-white-leaf-810vk4fpm5babnuc.webp')] flex flex-col justify-end gap-4 p-10 rounded-xl bg-center bg-no-repeat bg-cover w-full h-full">
            <div
                class="w-full p-6 rounded-lg shadow-lg bg-neutral-200/20 backdrop-blur-sm text-neutral-950 flex flex-col top-to-bottom !animation-delay-1000">
                <p class="text-2xl mb-4">Login options</p>
                <p class="mb-2">You can also log in with these platforms.</p>
                <div class="flex gap-4 flex-wrap">
                    <button type="button"
                        class="py-2 px-4 rounded-lg bg-neutral-200/20 hover:bg-neutral-200/30 shadow-lg">
                        <i class="bi bi-google"></i>
                        Google
                        account
                    </button>
                    <button type="button"
                        class="py-2 px-4 rounded-lg bg-neutral-200/20 hover:bg-neutral-200/30 shadow-lg">
                        <i class="bi bi-facebook"></i>
                        Facebook
                    </button>
                    <button type="button"
                        class="py-2 px-4 rounded-lg bg-neutral-200/20 hover:bg-neutral-200/30 shadow-lg">
                        <i class="bi bi-microsoft"></i>
                        Microsoft
                    </button>
                    <button type="button"
                        class="py-2 px-4 rounded-lg bg-neutral-200/20 hover:bg-neutral-200/30 shadow-lg">
                        <i class="bi bi-apple"></i>
                        Apple
                    </button>
                </div>
            </div>
            <div
                class="w-full p-6 rounded-lg shadow-lg bg-neutral-200/20 backdrop-blur-sm text-neutral-950 flex flex-col top-to-bottom !animation-delay-900">
                <p class="text-2xl mb-4">About us</p>
                <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Aliquam consequatur ratione necessitatibus
                    neque aliquid quaerat provident omnis, magnam labore consectetur?</p>
            </div>
        </div>
    </div>
    <div class="w-1/2 flex items-center justify-center right-to-left">
        <div class="shadow-xl bg-neutral-300 py-8 px-14 rounded-xl w-[30rem]">
            <h1 class="mb-14 text-5xl text-neutral-700 select-none bottom-to-top !animation-delay-500">
                @ViewData["Title"]</h1>
            <form method="post">
                <div class="flex flex-col gap-3">
                    <input asp-for="Input.Username" using Microsoft.AspNetCore.Mvc.ModelBinding.Validation;
                        class="text-center w-full text-neutral-900 outline-none px-4 py-2 rounded-lg shadow-lg bg-white bottom-to-top !animation-delay-500"
                        autocomplete="off" placeholder="Username" />
                    <span asp-validation-for="Input.Username" class="text-red-700 text-sm -mt-3 ml-2"></span>
                    <div class="bottom-to-top !animation-delay-500 relative">
                        <input asp-for="Input.Password"
                            class="w-full rounded-lg bg-white px-4 py-2 text-center text-neutral-900 shadow-lg outline-none"
                            autocomplete="off" placeholder="Password" id="password-input" type="password" />
                        <button type="button"
                            class="absolute bottom-0 right-0 top-0 flex w-10 items-center justify-center rounded-e-lg bg-transparent hover:backdrop-brightness-75"
                            tabindex="-1" data-target="password-input" onclick="togglePasswordVisibility(this)">
                            <i class="bi bi-eye-fill"></i>
                        </button>
                    </div>
                    <span asp-validation-for="Input.Password" class="text-red-700 text-sm -mt-3 ml-2"></span>
                    <div class="inline-flex items-center mb-8 bottom-to-top !animation-delay-500">
                        <label class="flex items-center relative cursor-pointer" for="check-1">
                            <input type="checkbox"
                                class="peer h-5 w-5 bg-neutral-300 appearance-none rounded-md shadow hover:shadow-md border-2 border-neutral-800 checked:bg-neutral-800"
                                id="check-1" tabindex="-1" />
                            <span
                                class="absolute text-white opacity-0 peer-checked:opacity-100 top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-3.5 w-3.5" viewBox="0 0 20 20"
                                    fill="currentColor" stroke="currentColor" stroke-width="1">
                                    <path fill-rule="evenodd"
                                        d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                                        clip-rule="evenodd"></path>
                                </svg>
                            </span>
                        </label>
                        <label class="ml-2 text-neutral-800 text-sm select-none cursor-pointer" for="check-1">
                            Remember me
                        </label>
                    </div>
                    <button type="submit"
                        class="w-full py-2 px-4 rounded-lg bg-white shadow-lg text-lg bottom-to-top !animation-delay-500">Login</button>
                    <div class="bottom-to-top !animation-delay-500">
                        <p class="text-center">
                            Don't have an account?
                            <a asp-page="./Register" class="text-blue-500 hover:text-blue-700" tabindex="-1"
                                asp-route-returnUrl="@Model.ReturnUrl">Register</a>
                        </p>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function togglePasswordVisibility(button) {
            const inputId = button.getAttribute("data-target");
            const passwordInput = document.getElementById(inputId);
            const toggleIcon = button.querySelector("i");

            if (passwordInput.type === "password") {
                passwordInput.type = "text";
                toggleIcon.classList.remove("bi-eye-fill");
                toggleIcon.classList.add("bi-eye-slash-fill");
            } else {
                passwordInput.type = "password";
                toggleIcon.classList.remove("bi-eye-slash-fill");
                toggleIcon.classList.add("bi-eye-fill");
            }
        }
    </script>

    <partial name="_ValidationScriptsPartial" />
}
